@inherits LayoutComponentBase
@inject ILanguageDictionary locale

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <button @onclick="@(async () => await  ChangeLanguage("fr"))">FR</button>
        <button @onclick="@(async() => await ChangeLanguage("en"))">EN</button>
        <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code{
    public async Task ChangeLanguage(string langKey)
    {
        await locale.SetLanguage(langKey);
    }
}
