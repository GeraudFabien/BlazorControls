@inject NavBarService navbarService

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Front</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
        
        <System.Razor.Controls.ItemControl Items="@navbarService.Items">
            <ItemTemplate>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="@context.HRef">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> @context.DisplayName
                    </NavLink>
                </li>
            </ItemTemplate>
        </System.Razor.Controls.ItemControl>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => navbarService.IsVisible ? "collapse" : null;

    private void ToggleNavMenu()
    {
        navbarService.IsVisible = !navbarService.IsVisible;
    }
}
